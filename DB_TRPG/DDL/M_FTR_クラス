DROP	TABLE TRPG_FTR.M_FTR_クラス;
CREATE	TABLE TRPG_FTR.M_FTR_クラス(
	"ルールID"		varchar(20)		NOT NULL
,	"職種"			varchar(100)	NOT NULL
,	"クラス"		varchar(100)	NOT NULL 
,	"背景"			varchar(100)	NOT NULL 
,	"洞察"			varchar(20)
,	"鑑識"			varchar(20)
,	"人間"			varchar(20)
,	"肉体"			varchar(20)
,	"固定"			varchar(100)
,	"使用フラグ"	numeric(1)
,	PRIMARY KEY ("ルールID","職種","クラス","背景")
);
