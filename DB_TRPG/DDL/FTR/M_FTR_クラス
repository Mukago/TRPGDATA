DROP	TABLE TRPG_FTR.M_FTR_クラス;
CREATE	TABLE TRPG_FTR.M_FTR_クラス(
	"職種"			varchar(10)		NOT NULL
,	"クラス"		varchar(40)		NOT NULL 
,	"任意"			numeric(1)
,	"洞察"			numeric(1)
,	"鑑識"			numeric(1)
,	"人間"			numeric(1)
,	"肉体"			numeric(1)
,	"固定"			varchar(100)
,	"ルール"		varchar(20)		NOT NULL
,	PRIMARY KEY("ルール","職種","クラス")
);
